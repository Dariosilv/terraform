{
    "variables": {
        "aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
        "aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
        "aws_region": "{{ env `AWS_REGION` }}"
    },
    "builders": [
        {      
            "access_key": "{{ user `aws_access_key_id` }}",
            "secret_key": "{{ user `aws_secret_access_key` }}",
            "region": "{{ user `aws_region` }}",
            "ami_name": "consul-on-aws-immutable",
            "instance_type": "m5.large",
            "ssh_username": "ubuntu",
            "ami_regions": ["us-east-1"],
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "ubuntu-minimal/images/hvm-ssd/ubuntu-bionic-18.04-amd64-minimal-*",
                    "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
            "type": "amazon-ebs"
        }
      ],
      "provisioners": [
        {
          "type": "file",
          "source": "binaries/consul_1.7.3_linux_amd64.zip",
          "destination": "/tmp/consul.zip"
        },
        {
          "type": "file",
          "source": "files",
          "destination": "/tmp"
        },
        {
            "type": "shell",
            "execute_command": "sudo {{ .Path }}",
            "script": "scripts/install-base-tools.sh"
        },
        {
            "type": "shell",
            "execute_command": "sudo {{ .Path }}",
            "script": "scripts/setup.sh"
        },
        {
            "type": "shell",
            "execute_command": "sudo {{ .Path }}",
            "script": "scripts/cleanup.sh"
        }
    ]
}
